            <tipo_institucion>Universidad Pública</tipo_institucion>
            <logo_ruta>/assets/logo_uleam.png</logo_ruta>
        </universidad>

        <datos_contacto>
            <direccion>Av. Circunvalación - Vía a San Mateo</direccion>
