            </facultad>

            <facultad codigo="FCS" nombre="Facultad de Ciencias de la Salud">
                <carrera codigo="MED" nombre="Medicina" duracion="12 semestres"/>
                <carrera codigo="ENF" nombre="Enfermería" duracion="10 semestres"/>
            </facultad>

            <facultad codigo="FCE" nombre="Facultad de Ciencias de la Educación">
                <carrera codigo="PED" nombre="Pedagogía" duracion="8 semestres"/>
            </facultad>
        </facultades>

        <!-- Niveles académicos -->
        <niveles_academicos>
            <nivel numero="1" nombre="Primer Nivel" ciclo="Básico"/>
            <nivel numero="2" nombre="Segundo Nivel" ciclo="Básico"/>
            <nivel numero="3" nombre="Tercer Nivel" ciclo="Básico"/>
            <nivel numero="4" nombre="Cuarto Nivel" ciclo="Básico"/>
            <nivel numero="5" nombre="Quinto Nivel" ciclo="Profesional"/>
            <nivel numero="6" nombre="Sexto Nivel" ciclo="Profesional"/>
            <nivel numero="7" nombre="Séptimo Nivel" ciclo="Profesional"/>
            <nivel numero="8" nombre="Octavo Nivel" ciclo="Profesional"/>
            <nivel numero="9" nombre="Noveno Nivel" ciclo="Profesional"/>
            <nivel numero="10" nombre="Décimo Nivel" ciclo="Profesional"/>
