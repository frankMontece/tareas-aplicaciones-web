        </autoridades>
    </informacion_institucional>

    <!-- ==================== CONFIGURACIÓN DEL SISTEMA ==================== -->
    <configuracion_sistema>
        <informacion_aplicacion>
            <nombre_sistema>Sistema de Automatización de Sílabos ULEAM</nombre_sistema>
            <acronimo>SAS-ULEAM</acronimo>
            <version>2.1.0</version>
            <ambiente>produccion</ambiente>            <!-- desarrollo | pruebas | produccion -->
            <fecha_implementacion>2024-03-15</fecha_implementacion>
            <desarrollador>Departamento de Tecnologías de la Información ULEAM</desarrollador>
            <email_soporte>soporte.silabos@uleam.edu.ec</email_soporte>
        </informacion_aplicacion>

        <!-- Periodo académico actual -->
        <periodo_academico>
            <ano>2024</ano>
            <ano_academico>2024-2025</ano_academico>
            <periodo>Primer Semestre</periodo>            <!-- Primer Semestre | Segundo Semestre -->
            <numero_periodo>1</numero_periodo>
            <modalidad>Presencial</modalidad>            <!-- Presencial | Virtual | Híbrido -->
            <fecha_inicio_clases>2024-10-01</fecha_inicio_clases>
            <fecha_fin_clases>2025-02-28</fecha_fin_clases>
            <total_semanas>20</total_semanas>
        </periodo_academico>

        <!-- Fechas límite críticas para sílabos -->
        <fechas_limite>
            <entrega_silabos_profesores>2024-10-15</entrega_silabos_profesores>
            <revision_coordinadores>2024-10-20</revision_coordinadores>
            <revision_comision_academica>2024-10-25</revision_comision_academica>
            <aprobacion_decanato>2024-10-30</aprobacion_decanato>
            <publicacion_estudiantes>2024-11-01</publicacion_estudiantes>
            <cierre_definitivo>2024-11-05</cierre_definitivo>
        </fechas_limite>

        <!-- Configuración específica para creación de sílabos -->
        <configuracion_silabos>
            <!-- Estructura del sílabo -->
            <estructura>
                <secciones_obligatorias>
                    <seccion>informacion_general</seccion>
                    <seccion>datos_asignatura</seccion>
                    <seccion>objetivos</seccion>
                    <seccion>unidades_didacticas</seccion>
                    <seccion>evaluacion</seccion>
                    <seccion>bibliografia</seccion>
                    <seccion>firma_responsables</seccion>
                </secciones_obligatorias>

                <secciones_opcionales>
                    <seccion>recursos_didacticos</seccion>
                    <seccion>practicas_laboratorio</seccion>
                    <seccion>proyectos_investigacion</seccion>
                    <seccion>enlaces_utiles</seccion>
                </secciones_opcionales>
            </estructura>

            <!-- Validaciones y límites -->
            <validaciones>
                <unidades>
                    <minimo>4</minimo>
                    <maximo>8</maximo>
                    <recomendado>5</recomendado>
                </unidades>

                <objetivos>
                    <generales_minimo>1</generales_minimo>
                    <generales_maximo>3</generales_maximo>
                    <especificos_minimo>3</especificos_minimo>
                    <especificos_maximo>8</especificos_maximo>
                </objetivos>

                <evaluaciones>
                    <minimo_actividades>3</minimo_actividades>
                    <maximo_actividades>10</maximo_actividades>
                    <porcentaje_minimo>5</porcentaje_minimo>
                    <porcentaje_maximo>40</porcentaje_maximo>
                </evaluaciones>

                <bibliografia>
                    <minima_obligatoria>3</minima_obligatoria>
                    <maxima_obligatoria>10</maxima_obligatoria>
                    <minima_complementaria>2</minima_complementaria>
                    <maxima_complementaria>8</maxima_complementaria>
                </bibliografia>
            </validaciones>

            <!-- Contenido por defecto -->
            <contenido_por_defecto>
                <objetivo_general>
          Proporcionar al estudiante los conocimientos teóricos y prácticos necesarios 
          para el desarrollo de competencias específicas en el área de estudio.
                </objetivo_general>

                <competencia_general>
          Al finalizar la asignatura, el estudiante será capaz de aplicar los 
          conocimientos adquiridos en la resolución de problemas reales de su 
          ámbito profesional.
                </competencia_general>

                <metodologia_por_defecto>
          La metodología será activa-participativa, combinando clases teóricas, 
          prácticas de laboratorio, trabajos individuales y grupales, y 
          evaluación continua.
                </metodologia_por_defecto>
            </contenido_por_defecto>
        </configuracion_silabos>
    </configuracion_sistema>

    <!-- ==================== CONFIGURACIÓN ACADÉMICA ==================== -->
    <configuracion_academica>
        <!-- Facultades y carreras de ULEAM -->
        <facultades>
            <facultad codigo="FING" nombre="Facultad de Ingeniería">
