        <!-- Tipos de asignatura -->
        <tipos_asignatura>
            <tipo codigo="OB" nombre="Obligatoria"/>
            <tipo codigo="OP" nombre="Optativa"/>
            <tipo codigo="EL" nombre="Electiva"/>
            <tipo codigo="PR" nombre="Práctica"/>
            <tipo codigo="IN" nombre="Investigación"/>
        </tipos_asignatura>
    </configuracion_academica>

    <!-- ==================== CONFIGURACIÓN DE FORMATO ==================== -->
    <formato_impresion>
        <!-- Configuración para generar PDF -->
        <documento>
            <tamano_papel>A4</tamano_papel>
            <orientacion>vertical</orientacion>            <!-- vertical | horizontal -->
            <margenes>
                <superior>2.5cm</superior>
                <inferior>2.5cm</inferior>
                <izquierdo>3cm</izquierdo>
                <derecho>2cm</derecho>
            </margenes>
            <interlineado>1.5</interlineado>
            <espaciado_parrafos>6pt</espaciado_parrafos>
        </documento>

        <!-- Estilos y colores institucionales -->
        <estilos>
            <fuentes>
                <principal_familia>Arial, sans-serif</principal_familia>
                <principal_tamano>11pt</principal_tamano>
                <titulo_familia>Arial, sans-serif</titulo_familia>
                <titulo_tamano>14pt</titulo_tamano>
                <subtitulo_tamano>12pt</subtitulo_tamano>
            </fuentes>

            <colores_institucionales>
                <primario>#003366</primario>                <!-- Azul ULEAM -->
                <secundario>#CC0000</secundario>                <!-- Rojo ULEAM -->
                <acento>#FF9900</acento>                <!-- Naranja ULEAM -->
                <texto_primario>#000000</texto_primario>
                <texto_secundario>#333333</texto_secundario>
            </colores_institucionales>
        </estilos>

        <!-- Encabezado y pie de página -->
        <encabezado_pie>
            <encabezado_habilitado>true</encabezado_habilitado>
            <pie_habilitado>true</pie_habilitado>
            <mostrar_logo>true</mostrar_logo>
            <mostrar_fecha_generacion>true</mostrar_fecha_generacion>
            <mostrar_pagina>true</mostrar_pagina>
        </encabezado_pie>

        <!-- Plantilla de firma -->
        <firma>
            <espacio_firma altura="5cm"/>
            <linea_firma longitud="8cm"/>
            <texto_firma_profesor>Nombre y Apellido del Docente</texto_firma_profesor>
            <texto_firma_coordinador>Nombre y Apellido del Coordinador</texto_firma_coordinador>
            <texto_firma_decano>Nombre y Apellido del Decano</texto_firma_decano>
        </firma>
    </formato_impresion>

    <!-- ==================== CONFIGURACIÓN DEL SISTEMA ==================== -->
    <configuracion_tecnica>
        <!-- Configuración de sesión y seguridad -->
        <sesion_seguridad>
            <tiempo_expiracion_sesion>60</tiempo_expiracion_sesion>            <!-- minutos -->
            <maximo_intentos_login>5</maximo_intentos_login>
            <bloqueo_temporal>15</bloqueo_temporal>            <!-- minutos -->
            <requiere_cambio_password>90</requiere_cambio_password>            <!-- días -->
            <password_min_length>8</password_min_length>
            <requiere_mayuscula>true</requiere_mayuscula>
            <requiere_numero>true</requiere_numero>
            <requiere_caracter_especial>true</requiere_caracter_especial>
        </sesion_seguridad>

        <!-- Configuración de almacenamiento -->
        <almacenamiento>
            <ruta_archivos>/silabos/</ruta_archivos>
            <formato_archivo_silabo>.pdf</formato_archivo_silabo>
            <tamano_maximo_mb>10</tamano_maximo_mb>
            <formatos_permitidos>
                <formato>.pdf</formato>
                <formato>.docx</formato>
                <formato>.odt</formato>
            </formatos_permitidos>
            <backup_automatico>true</backup_automatico>
            <frecuencia_backup>diario</frecuencia_backup>            <!-- diario | semanal | mensual -->
        </almacenamiento>

        <!-- Configuración de notificaciones -->
        <notificaciones>
            <notificar_plazos>true</notificar_plazos>
            <notificar_aprobacion>true</notificar_aprobacion>
            <notificar_cambios>true</notificar_cambios>
            <dias_antes_recordatorio>3</dias_antes_recordatorio>
            <email_notificaciones>true</email_notificaciones>
        </notificaciones>

        <!-- Configuración regional -->
        <regional>
            <idioma>es</idioma>            <!-- es | en -->
            <pais>EC</pais>
            <zona_horaria>America/Guayaquil</zona_horaria>
            <formato_fecha>DD/MM/YYYY</formato_fecha>
            <formato_hora>HH:mm</formato_hora>
            <moneda>USD</moneda>
        </regional>
    </configuracion_tecnica>

